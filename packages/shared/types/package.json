{
  "name": "@usertour/types",
  "version": "0.0.50",
  "private": true,
  "description": "TypeScript type definitions and enums shared across the UserTour project",
  "license": "AGPL-3.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "tsup src --dts --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src"
  },
  "devDependencies": {
    "typescript": "^5.0.2"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": ["cjs", "esm"],
    "entry": ["src/index.ts"],
    "outDir": "dist",
    "dts": true
  }
}
