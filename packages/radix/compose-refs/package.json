{
  "name": "@usertour-ui/react-compose-refs",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "main": "src/index.ts",
  "sideEffects": false,
  "scripts": {
    "build": "tsup src --dts",
    "dev": "pnpm build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src"
  },
  "peerDependencies": {
    "@types/react": "*",
    "react": "^16.8 || ^17.0 || ^18.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.13.10"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": ["cjs", "esm"]
  }
}
